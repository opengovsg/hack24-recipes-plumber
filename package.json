{
  "name": "@plumber/root",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "all": "concurrently -c green,blue,bgBlue",
    "setup": "npm run -w @plumber/backend setup",
    "dev:frontend": "npm run -w @plumber/web dev",
    "dev:backend": "npm run -w @plumber/backend dev",
    "dev:worker": "npm run -w @plumber/backend worker",
    "dev": "npm run all --kill-others npm:dev:*",
    "build:frontend": "npm run -w @plumber/web build",
    "build:backend": "npm run -w @plumber/backend build",
    "build": "npm run all npm:build:*",
    "start": "npm run -w @plumber/backend start",
    "lint": "npm run --workspaces --if-present lint"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^4.4.1",
    "typescript": "^4.6.3"
  }
}
