{
  "name": "@plumber/root",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "all": "concurrently -c green,blue,bgBlue",
    "setup": "npm run -w @plumber/backend setup",
    "dev": "npm run all -- --kill-others 'npm run -w @plumber/web dev' 'npm run -w @plumber/backend dev' 'npm run -w @plumber/backend worker'",
    "lint": "npm run --workspaces --if-present lint"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/babel-loader",
      "**/webpack",
      "**/@plumber/types"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.5.1",
    "typescript": "^4.6.3"
  }
}
